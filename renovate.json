{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "development"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "groupName": "all minor updates",
      "groupSlug": "all-minor"
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
